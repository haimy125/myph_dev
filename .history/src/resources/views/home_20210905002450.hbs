<div class="mt-4">
<div class="row">
{{#each courses}}
    <div class="col-sm-6 col-lg-4">
        <div class="card card-course-item">
        <img class="card-img-top" src="{{this.image}}" alt="{{this.image}}" width="200" height="250">
        <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.discription}}</p>
            <a href="#" class="btn btn-primary">Mua khóa học</a>
        </div>
        </div>
    </div>
{{/each}}
</div>
</div>